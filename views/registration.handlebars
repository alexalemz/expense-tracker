<h3>{{title}}</h3>

<form method="POST" action="/api/register" class="mt-3">
  <div class="form-row">
    <div class="form-group col-sm-6 col-md-6 col-lg-5">
      <label for="email">Email address</label>
      <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email" required autofocus>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-sm-6 col-md-6 col-lg-5">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-sm-6 col-md-6 col-lg-5">
      <label for="passwordMatch">Re-enter password</label>
      <input type="password" class="form-control" id="passwordMatch" name="passwordMatch" placeholder="Password" required>
      <div class="valid-feedback">Success!</div>
      <div class="invalid-feedback">Password must match.</div>
    </div>
  </div>
  <div style="display: none" id="alert" class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span> <span class="msg"></span>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<br>
<p>Already have an account? Login <a href="/login">here</a></p>

<script src="/js/registration.js"></script>