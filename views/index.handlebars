<div class="container">
<h2>Add an expense</h2>
<form id="add-expense">
    <div style="display:inline-block" class="form-group">
        <label for="description">Description</label> <br>
        <input type="text" id="description" placeholder="Purchase" class="form-control" required>
    </div>
    <div style="display:inline-block" class="form-group">
        <label for="amount">Amount</label> <br>
        {{!-- <input style="width:6em" placeholder="0.00" type="number" id="amount" class="form-control" step=".01" min=".01" required> --}}
        <input style="width:8em" placeholder="0.00" type="text" id="amount" class="form-control" required>
    </div>
    <div style="display:inline-block" class="form-group">
        <label for="date">Date</label> <br>
        <input type="date" id="date" class="form-control" required>
    </div>
    <div style="display:inline-block" class="form-group">
        <label for="category">Category</label> <br>
        <select id="category" class="form-control" required>
            <option value="">-- Select a category --</option>
            {{#each categories}}
                <option value={{this.id}}>{{category_name}}</option>
            {{/each}}
            {{!-- <option value="1">Entertainment</option>
            <option value="2">Food</option>
            <option value="3">Gas</option>
            <option value="4">Clothing</option>
            <option value="5">Utilities</option> --}}
        </select>
    </div>
    <input type="submit" class="btn" value="Submit">
</form>



</div>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
